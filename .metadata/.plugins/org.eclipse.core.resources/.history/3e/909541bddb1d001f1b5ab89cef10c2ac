package com.berna.springboot.app.crud.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.berna.springboot.app.crud.entities.Product;
import com.berna.springboot.app.crud.repositories.ProductRepo;

@Service // Acá va la lógica de negocio
public class ProductServiceImpl implements ProductService {
	
	@Autowired
	private ProductRepo repo;
	
	@Transactional(readOnly = true)
	@Override
	public List<Product> findAll() {
		return (List<Product>) repo.findAll();
	}
	
	@Transactional(readOnly = true)
	@Override
	public Optional<Product> findById(Long id) {
		return repo.findById(id);
	}
	
	@Transactional
	@Override
	public Product save(Product product) {
		return repo.save(product);
	}
	
	@Transactional
	@Override
	public Optional<Product> delete(Product product) {
		Optional<Product> productDb = repo.findById(product.getId());
		productDb.ifPresent(prod->{
			repo.delete(product);
		});
		return productDb;
	}

}
